<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newpc.qrcode">

    <!-- Permissoes necessarias para o pleno funcionamento do aplicativo e da SDK -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_ambev"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DisplayProductActivity" />
        <activity android:name=".DevicesActivity" />
        <activity android:name=".ConnectPinpadActivity" />
        <activity android:name=".ConnectPagarmeActivity" />
        <activity android:name=".ConnectStoneActivity" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".ReaderActivity" />
        <activity android:name=".ValidationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReplenishmentActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"></category>
                <data android:scheme="http"
                    android:host="www.nespresso.com.br"
                    android:pathPrefix="/replenish" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SalesmanScreenActivity"></activity>
        <activity android:name=".CPFActivity"></activity>
    </application>

</manifest>